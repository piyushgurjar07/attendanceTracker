        }

        .login-container button {
            padding: 12px 24px;
            border: none;
            border-radius: 5px;
            background-color: #007bff;
            color: #9d2929;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }
        a{
            color: white;
            text-decoration: none;
        }

        .login-container button:hover {
            background-color: #0056b3;
        }
         
        #stu{
            height: 65px;
        }
        /* Responsive Styling */
        @media screen and (min-width: 768px) {
            .login-container {
                width: calc(50% - 20px);
                margin-right: 20px;
            }
        }
    </style>
</head>
