<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Attendance Management System - Teacher Home</title>
    <style>
        body {
    font-family: sans-serif;
    margin: 0;
    padding: 0;
}

header {
    background-color: #3f51b5;
    color: white;
    padding: 20px;
    text-align: center;
}

main {
    padding: 20px;
}

h2 {
    margin-bottom: 15px;
}
.class-form {
            display: flex;
            flex-wrap: wrap;
        }

        .class-card {
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 15px;
            margin-bottom: 20px;
            flex: 1 1 300px; /* Each card takes a minimum width of 300px */
            max-width: calc(33.33% - 20px); /* Adjust as needed, this makes sure three cards fit in a row */
            margin-right: 20px; /* Margin between cards */
            background-color: #f9f9f9;
            height: 200px; /* Fixed height for each card */
        }

        .class-card:last-child {
            margin-right: 0; /* Remove margin for the last card in a row */
        }

        .class-card h3 {
            margin-bottom: 10px;
            color: #333;
        }

        .class-card p {
            margin: 5px 0;
            color: #666;
        }

button[type="submit"] {
    width: 100%;
    background-color: #4CAF50;
    border: none;
    color: white;
    padding: 10px;
    text-align: center;
    text-decoration: none;
    display: block;
    font-size: 14px;
    margin-top: 10px;
    cursor: pointer;
}
.logout-btn {
            background-color: #f44336;
            border: none;
            color: white;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 14px;
            margin-top: 20px;
            cursor: pointer;
            border-radius: 5px;
        }
    </style>
</head>
<body>
<header style="display:flexbox">
    <h1>Welcome, teachers</h1>
    <button class="logout-btn" onclick="location.href='login'">Logout</button>
</header>
<main>
    <h2>Your Classes</h2>
    <section id="class-list">
        <!-- Classes will be dynamically added here -->
        <form action="/page" class="class-form">
            <% branch_year_data.forEach((data, index) => { %>
                <div class="class-card">
                    <h3>Degree: <%= data.Degree %></h3>
                    <p>Branch: <%= data.Branch %></p>
                    <p>Year: <%= data.Year %></p>
                    <button type="submit">Take Attendance</button>
                </div>
            <% }); %>
        </form>
    </section>
</main>
</body>
</html>
